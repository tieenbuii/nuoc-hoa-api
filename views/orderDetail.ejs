<% layout('base') -%>
    <div class="row mx-0">
        <div class="col-lg-10 col-xl-8">
            <div class="card" style="border-radius: 10px;">
                <div class="card-header px-4 py-5">
                    <h5 class="text-muted mb-0"><span style="color: #a8729a;font-size: 26px;">
                            Đơn đặt hàng từ <%= data.user.name %>
                        </span></h5>
                </div>
                <div class="card-body p-4">
                    <% data.cart.forEach(function(value) {const name=value.product.title.length>
                        28?value.product.title.slice(0,29):value.product.title;const percent =
                        value.product.percent?value.product.percent:0;
                        %>
                        <div class="card shadow-0 border mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        <img src="<%= value.product.images[0]%>" class="img-fluid" alt="Phone">
                                    </div>
                                    <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-danger font-semibold mb-0">
                                            <%= name %>
                                        </p>
                                    </div>
                                    <!-- <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">
                                            <%= value.product.color%>
                                        </p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">Mùa: <%= value.product.season%></p>
                                    </div> -->
                                    <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0">Số lượng: <%= value.quantity%>
                                        </p>
                                    </div>
                                    <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-black font-bold mb-0">
                                            <%= value.product.price.toLocaleString('vi-VN') %> VND
                                        </p>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <% }); %>

                            <div class="card card-stepper text-black" style="border-radius: 16px;">

                                <div class="card-body p-5">

                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <div>
                                            <h5 class="mb-0 font-weight-bold">ĐƠN HÀNG <span class="text-primary font-weight-bold"></span>
                                                <%= data._id %>
                                                    </span>
                                            </h5>
                                        </div>
                                    </div>
                                    <input type="hidden" value="<%= data.status%>" id="status" />

                                    <div class="progress">
                                        <div id="progress-bar" class="progress-bar" role="progressbar" style="width: 0%"
                                            aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>

                                    <div class="d-flex justify-content-between pt-5">
                                        <div class="d-lg-flex align-items-center">
                                            <i
                                                class="fas fa-clipboard-list fa-3x me-lg-4 mb-3 mb-lg-0 text-secondary"></i>
                                            <div>
                                                <p class="fw-bold mb-1"></p>
                                                <p class="fw-bold mb-0">Chờ xác nhận</p>
                                            </div>
                                        </div>
                                        <div class="d-lg-flex align-items-center">
                                            <i class="fas fa-box-open fa-3x me-lg-4 mb-3 mb-lg-0 text-warning"></i>
                                            <div>
                                                <p class="fw-bold mb-1"></p>
                                                <p class="fw-bold mb-0">Đợi lấy hàng</p>
                                            </div>
                                        </div>
                                        <div class="d-lg-flex align-items-center">
                                            <i class="fas fa-shipping-fast fa-3x me-lg-4 mb-3 mb-lg-0 text-info"></i>
                                            <div>
                                                <p class="fw-bold mb-1"></p>
                                                <p class="fw-bold mb-0">Đang vận chuyển</p>
                                            </div>
                                        </div>
                                        <div class="d-lg-flex align-items-center">
                                            <i class="fas fa-home fa-3x me-lg-4 mb-3 mb-lg-0 text-success"></i>
                                            <div>
                                                <p class="fw-bold mb-1"></p>
                                                <p class="fw-bold mb-0">Đã giao hàng</p>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>

                            <div class="d-flex justify-content-between pt-2">
                                <p class="fw-bold mb-0 text-primary">Chi tiết đơn hàng</p>
                            </div>

                            <div class="d-flex justify-content-between">
                                <p class="text-muted mb-0">Thời gian đặt hàng: <%=data.date%>
                                </p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">Giá</span>
                                    <%=data.total.toLocaleString('vi-VN') %> VND
                                </p>
                            </div>
                            <div class="d-flex justify-content-between">
                                <p class="text-muted mb-0">Người nhận: <%=data.receiver%>
                                </p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">Khuyến mãi</span>
                                    <%=data.discount.toLocaleString('vi-VN') %> VND
                                </p>
                            </div>
                            <div class="d-flex justify-content-between">
                                <p class="text-muted mb-0">Số điện thoại: <%=data.phone%>
                                </p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">Phí giao hàng:</span> Miễn phí</p>
                            </div>
                            <div class="d-flex justify-content-between">
                                <p class="text-muted mb-0">Địa chỉ: <%=data.address%></p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">Thanh toán</span>
                                    <%=data.payments%>
                            </div>
                </div>
                <div class="card-footer border-0 px-4 py-5"
                    style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                    <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Tổng số tiền: <span class="h2 mb-0 ms-2">
                        <%= data.totalPrice.toLocaleString('vi-VN') %> VND
                        </span></h5>
                </div>
            </div>
        </div>
        <div class="col-lg-10 col-xl-4">
            <div class="border-status py-5">
                <div class="order-action text-center">
                    <h4 class="text-primary">Cập nhật trạng thái</h4>
                </div>
                <hr style="height: 0;">

                <div class="text-center">
                    <% if (data.status=="Cancelled" ) { %>
                        <div class="text-center">
                            <button class="btn btn-danger" disabled>Đã hủy</button>
                        </div>
                        <%}else if(data.status=="Processed" ) {%>
                            <div class="d-flex text-center">
                                <div class="col-md-6">
                                    <button class="btn btn-danger" data-id="<%=data._id %>"
                                        onclick="cancelOrder(this)">Hủy đơn</button>
                                </div>
                                <div class="col-md-6">
                                    <button class="btn btn-success" value="WaitingGoods" data-id="<%=data._id %>"
                                        onclick="acceptOrder(this)">Đợi lấy hàng</button>
                                </div>
                            </div>
                            <%} else if(data.status=="WaitingGoods" ){ %>
                                <div class="d-flex text-center">
                                    <div class="col-md-6">
                                        <button class="btn btn-danger" data-id="<%=data._id %>"
                                            onclick="cancelOrder(this)">Hủy đơn</button>
                                    </div>
                                    <div class="col-md-6">
                                        <button class="btn btn-success" value="Delivery" data-id="<%=data._id %>"
                                            onclick="acceptOrder(this)">Đang vận chuyển</button>
                                    </div>
                                </div>
                                <%} else if(data.status=="Delivery" ){ %>
                                    <div class="d-flex text-center">
                                        <div class="col-md-6">
                                            <button class="btn btn-danger" data-id="<%=data._id %>"
                                                onclick="cancelOrder(this)">Hủy đơn</button>
                                        </div>
                                        <div class="col-md-6">
                                            <button class="btn btn-success" value="Success" data-id="<%=data._id %>"
                                                onclick="acceptOrder(this)">Đã giao hàng</button>
                                        </div>
                                    </div>
                                    <%} else { %>
                                        <div class="text-center">
                                                <button class="btn btn-success" disabled>Thành công</button>
                                        </div>
                                        <% } %>
                </div>
            </div>
            <div class="my-5 text-center">
                <a href="/orders"><button href="" class="btn btn-primary">Quay lại xem đơn hàng</button></a>
            </div>
        </div>
    </div>
    <script src="/js/detail.js"></script>