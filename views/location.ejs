<% layout('base') -%>
<div class="container">
  <h1 class="my-4 text-center text-primary">DỊA CHỈ</h1>
  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col col-sm-9 text-dark">
          <h4><strong>ĐỊA CHỈ CỬA HÀNG</strong></h4>
        </div>
        <div class="col col-sm-3">
          <button
            type="button"
            id="add_data"
            class="btn btn-success btn-sm float-end"
          >
            Thêm cửa hàng
          </button>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-hover" id="sample_data">
          <thead>
            <tr>
              <th>Tên</th>
              <th>Địa chỉ</th>
              <th>Hành động</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="modal" id="action_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="post" id="sample_form" enctype="multipart/form-data">
        <div class="modal-header" id="dynamic_modal_title">
          <h5 class="modal-title"></h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="mb-2 edit-show">
            <label class="form-label">Tên</label>
            <input type="text" name="name" id="name" class="form-control" />
          </div>
          <div class="mb-2 edit-show row">
            <div class="col-md-8">
              <label class="form-label">Địa chỉ</label>
              <input
                type="text"
                name="address"
                id="address"
                class="form-control"
              />
            </div>
            <div class="col-md-4 d-flex align-items-end">
              <div class="btn btn-light" onclick="geocodeAddress()">
                Lấy địa chỉ
              </div>
            </div>
          </div>
          <div class="mb-2 edit-show">
            <label class="form-label">Kinh độ</label>
            <input
              type="text"
              name="longitude"
              id="longitude"
              class="form-control"
              disabled
            />
          </div>
          <div class="mb-2 edit-show">
            <label class="form-label">Vĩ độ</label>
            <input
              type="text"
              name="latitude"
              id="latitude"
              class="form-control"
              disabled
            />
          </div>
          <div class="mb-2 edit-show map-container">
            <div id="map"></div>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="id" id="id" />
          <input type="hidden" name="action" id="action" value="Add" />
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Hủy
          </button>
          <button type="submit" class="btn btn-primary" id="action_button">
            Thểm cửa hàng
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/js/location.js"></script>
